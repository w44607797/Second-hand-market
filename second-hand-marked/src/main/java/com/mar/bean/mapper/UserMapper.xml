<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mar.bean.mapper.UserMapper">
    <select id="getParamByPhone" resultType="String">
        select ${condition} from app_user where 1=1
        <trim suffixOverrides=",">
            <if test="phone != null">
                and phone = #{phone},
            </if>
            <if test="permission != null">
                and permission = #{permission},
            </if>
        </trim>
    </select>
</mapper>